<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MudletPackage>
<MudletPackage version="1.001">
	<AliasPackage>
		<AliasGroup isActive="yes" isFolder="yes">
			<name>echoChatOut</name>
			<script>--takes your chat output and echoes it to the dedicated chat window
--does not currently handle XT chat</script>
			<command></command>
			<packageName></packageName>
			<regex></regex>
			<Alias isActive="yes" isFolder="no">
				<name>echoCom</name>
				<script>send(matches[1])
FEDUI.chatWindow:cecho('&lt;ansiCyan&gt;You comm: "' .. matches[2] .. '"\n')</script>
				<command></command>
				<packageName></packageName>
				<regex>^com (.+)?$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>echoSay</name>
				<script>send(matches[1])
FEDUI.chatWindow:cecho('&lt;ansiCyan&gt;You say: "' .. matches[2] .. '"\n')</script>
				<command></command>
				<packageName></packageName>
				<regex>^say (.+)?$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>echoSay(")</name>
				<script>send(matches[1])
FEDUI.chatWindow:cecho('&lt;ansiCyan&gt;You say: "' .. matches[2] .. '"\n')</script>
				<command></command>
				<packageName></packageName>
				<regex>^"(.+)?$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>echoSay(')</name>
				<script>send(matches[1])
FEDUI.chatWindow:cecho('&lt;ansiCyan&gt;You say: "' .. matches[2] .. '"\n')</script>
				<command></command>
				<packageName></packageName>
				<regex>^'(.+)?$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>echoTB</name>
				<script>send(matches[1])
FEDUI.chatWindow:cecho('&lt;ansiRed&gt;You tell ' .. matches[2] .. ': "' .. matches[3] .. '"\n')</script>
				<command></command>
				<packageName></packageName>
				<regex>^tb (\w+) (.+)$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>echoTell</name>
				<script>send(matches[1])
FEDUI.chatWindow:cecho('&lt;ansiRed&gt;You tell ' .. matches[2] .. ': "' .. matches[3] .. '"\n')</script>
				<command></command>
				<packageName></packageName>
				<regex>^tell (\w+) (.+)$</regex>
			</Alias>
		</AliasGroup>
	</AliasPackage>
</MudletPackage>
